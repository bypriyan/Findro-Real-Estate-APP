<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".register.MobileNumber">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="@dimen/_4sdp"
                    android:tint="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:layout_below="@id/backBtn"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/home"
                            android:padding="@dimen/_5sdp"
                            android:tint="@color/blue"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_gravity="bottom"
                            android:text="Create Account"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textSize="@dimen/_18ssp"
                            android:fontFamily="@font/office"
                            android:textStyle="bold"
                            android:layout_below="@+id/img"
                            android:layout_centerHorizontal="true"/>

                    </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/greay"
                    app:hintTextColor="@color/black"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:textColor="@color/black"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxStrokeColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:drawableTint="@color/dark_greay"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:inputType="text"  />
                </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="@color/greay"
                        app:hintTextColor="@color/black"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                        app:boxStrokeColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:drawableTint="@color/dark_greay"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:inputType="textEmailAddress"  />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/cpp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/outline"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_5sdp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mobile"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColorHint="@color/greay"
                            app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                            app:boxCornerRadiusTopStart="@dimen/_5sdp"
                            app:hintTextColor="@color/lite_greay"
                            app:errorTextColor="@color/white"
                            app:boxStrokeColor="@color/blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Mobile No."
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_15sdp"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColorHint="@color/greay"
                        app:hintTextColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:passwordToggleTint="@color/black"
                        app:passwordToggleEnabled="true"
                        android:textColor="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:drawableTint="@color/dark_greay"
                            android:drawableStart="@drawable/ic_lock"
                            android:drawablePadding="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:text="Continue"
                            app:cornerRadius="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:id="@+id/next"
                            android:textColor="@color/white"
                            android:layout_below="@+id/temp"
                            android:layout_centerHorizontal="true"
                            android:backgroundTint="@color/blue">
                        </com.google.android.material.button.MaterialButton>


                        <ProgressBar
                            android:id="@+id/progressbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/blue"
                            android:visibility="invisible">

                        </ProgressBar>

                    </FrameLayout>

                <RelativeLayout
                    android:layout_below="@id/name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/dark_greay"
                        android:text="@string/rules"
                        android:layout_centerHorizontal="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/rl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/skyBlue"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:text="T&amp;C "

                            />

                        <TextView
                            android:id="@+id/and"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_greay"
                            android:layout_gravity="center_vertical"
                            android:text=" and "
                            android:layout_toRightOf="@id/terms"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/rl"
                            />
                        <TextView
                            android:id="@+id/privacyPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/skyBlue"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_10ssp"
                            android:text=" Privacy Policy."
                            android:layout_toRightOf="@id/and"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/rl"
                            />

                    </LinearLayout>

                </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

    </ScrollView>


</RelativeLayout>