<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:src="@drawable/ic_arrow_back"
        android:padding="@dimen/_4sdp"
        android:tint="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>

    <ScrollView
        android:layout_below="@id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_150sdp">

                        <RelativeLayout
                            android:id="@+id/tiffinService"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/yellow_draw">

                            <TextView
                                android:id="@+id/tiffin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiffin Service"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_18sdp"
                                android:padding="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/baloo"/>
                            <TextView
                                android:layout_below="@id/tiffin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPAND ALL"
                                android:textAllCaps="true"
                                android:textColor="@color/dark_greay"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/office"/>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/food_img"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_150sdp">

                        <RelativeLayout
                            android:id="@+id/milkService"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/lime_draw">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPAND ALL"
                                android:textAllCaps="true"
                                android:textColor="@color/dark_greay"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:fontFamily="@font/office"/>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/milk_bottle"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_150sdp">

                        <RelativeLayout
                            android:id="@+id/paintingService"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/red_draw">

                            <TextView
                                android:id="@+id/paint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Painting &amp; Cleaning"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:padding="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/baloo"/>
                            <TextView
                                android:layout_below="@id/paint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPAND ALL"
                                android:textAllCaps="true"
                                android:textColor="@color/limeGreay"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/office"/>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/painting_img"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_150sdp">

                        <RelativeLayout
                            android:id="@+id/packerMover"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/black_draw">

                            <TextView
                                android:id="@+id/packer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Packers &amp; Movers"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp"
                                android:padding="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/baloo"/>
                            <TextView
                                android:layout_below="@id/packer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPAND ALL"
                                android:textAllCaps="true"
                                android:textColor="@color/limeGreay"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/office"/>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/packer_mover"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="@dimen/_150sdp">

                        <RelativeLayout
                            android:id="@+id/repairService"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/blue_draw">

                            <TextView
                                android:id="@+id/rep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Repair Service"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp"
                                android:padding="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/baloo"/>
                            <TextView
                                android:layout_below="@id/rep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EXPAND ALL"
                                android:textAllCaps="true"
                                android:textColor="@color/limeGreay"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:fontFamily="@font/office"/>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/electrician"/>

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.material.card.MaterialCardView
                android:layout_below="@id/backBtn"
                android:id="@+id/posProperty"
                app:rippleColor="@color/lite_greay"
                app:cardElevation="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_8sdp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_below="@id/backBtn"
                        android:layout_centerHorizontal="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/home" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post Property on Rent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faster &amp; verified Tenants."
                            android:textColor="@color/bg"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spend ZERO on brokerage"
                            android:textColor="@color/bg"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:textSize="@dimen/_10ssp"/>
                    </LinearLayout>


                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_below="@id/backBtn"
                    android:layout_centerHorizontal="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/free" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/demand"
                app:rippleColor="@color/lite_greay"
                app:cardElevation="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_8sdp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_below="@id/backBtn"
                        android:layout_centerHorizontal="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/blue_house" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Are You looking for?"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="We will help you to find the property according to your need"
                            android:textColor="@color/bg"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp"/>

                    </LinearLayout>

                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_4sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/new_lottiw_anim" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="@dimen/_4sdp"
                android:padding="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_12sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                android:padding="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_person"
                            android:id="@+id/prof"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/bg_outline_greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                        <TextView
                            android:layout_toRightOf="@id/prof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_12ssp"
                            android:id="@+id/txt1"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/editProfile"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:textColorHint="@color/greay"
                            app:hintTextColor="@color/black"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"
                            app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                            app:boxStrokeColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name"
                                android:drawableTint="@color/dark_greay"
                                android:drawableStart="@drawable/ic_person"
                                android:drawablePadding="@dimen/_15sdp"
                                android:textColor="@color/black"
                                android:inputType="text"  />
                        </com.google.android.material.textfield.TextInputLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:text="update"
                                app:cornerRadius="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:id="@+id/next"
                                android:textColor="@color/white"
                                android:layout_below="@+id/temp"
                                android:layout_centerHorizontal="true"
                                android:backgroundTint="@color/blue">
                            </com.google.android.material.button.MaterialButton>


                            <ProgressBar
                                android:id="@+id/progressbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminateTint="@color/blue"
                                android:visibility="invisible">

                            </ProgressBar>

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/yourProperties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                android:padding="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_properties"
                            android:id="@+id/proper"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/bg_outline_greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                        <TextView
                            android:layout_toRightOf="@id/proper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Properties"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                    </RelativeLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/customerCare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                android:padding="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/customer_support"
                            android:id="@+id/cus"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/bg_outline_greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                        <TextView
                            android:layout_toRightOf="@id/cus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24x7 Help &amp; Support"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                    </RelativeLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:visibility="gone"
                android:id="@+id/shareImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/share_invite_img"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/share"
                app:rippleColor="@color/limeGreay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                android:padding="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_outline_share"
                            android:id="@+id/shr"
                            android:padding="@dimen/_3sdp"
                            android:background="@drawable/bg_outline_greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                        <TextView
                            android:layout_toRightOf="@id/shr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/greay"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"/>

                    </RelativeLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privecyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
